{% extends 'base.html.twig' %}
{% block title %}User List (ORM){% endblock %}
{% block body %}
<h1>User List (ORM)</h1>
<table border="1">
    <thead>
        <tr>
            <th>ID</th><th>Username</th><th>Name</th><th>Email</th>
            <th>Enabled</th><th>Birthdate</th><th>Address</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.enable ? 'Yes' : 'No' }}</td>
                <td>{{ entity.birthdate ? entity.birthdate|date('Y-m-d H:i') : '' }}</td>
                <td>{{ entity.address }}</td>
            </tr>
        {% else %}
            <tr><td colspan="7">No users found.</td></tr>
        {% endfor %}
    </tbody>
</table>
<p><a href="{{ path('ex03') }}">Insert New User</a></p>
{% endblock %}
